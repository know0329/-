<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.d208.giggy.view.SignUpNextFragment">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:id="@+id/fragment_sign_up_next_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가 정보 입력 (2/2)"
        android:textSize="36sp"
        android:textColor="@color/main"
        android:fontFamily="@font/the_jamsil_4_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/fragment_sing_up_next_sub_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/the_jamsil_2_light"
        android:text="회원 가입을 위해 정보를 입력하세요"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_next_text_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_next_text_view"
        />

    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/fragment_sign_up__next_account_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/the_jamsil_2_light"
        android:textSize="16dp"
        android:textColor="@color/main"
        android:text="계좌 연결"
        app:layout_constraintStart_toStartOf="@+id/fragment_sing_up_next_sub_text_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sing_up_next_sub_text_view"
        />


    <com.google.android.material.textfield.TextInputEditText
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:id="@+id/fragment_sign_up_next_account_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="계좌번호를 입력해주세요"
        android:background="@drawable/edit_text_rectangle"
        app:layout_constraintStart_toStartOf="@+id/fragment_sign_up__next_account_text_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up__next_account_text_view"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="32dp"
        android:id="@+id/fragment_sign_up_next_check_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_box"
        android:gravity="center"
        android:text="인증 요청하기"
        style="@style/Text.regular.Size20"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_next_account_edit_text" />

    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/fragment_sign_up__next_account_check_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/the_jamsil_2_light"
        android:textSize="16dp"
        android:textColor="@color/main"
        android:text="계좌 인증"
        app:layout_constraintStart_toStartOf="@+id/fragment_sing_up_next_sub_text_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_next_check_button"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:id="@+id/fragment_sign_up_next_account_check_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="인증 문자를 입력해주세요"
        android:background="@drawable/edit_text_rectangle"
        app:layout_constraintStart_toStartOf="@+id/fragment_sign_up__next_account_check_text_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up__next_account_check_text_view"
        />

    <TextView
        android:id="@+id/fragment_sign_up_next_timer_text_view"
        android:layout_marginHorizontal="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:00"
        android:visibility="gone"
        style="@style/Text.regular.Size20"
        android:textColor="@color/main"
        app:layout_constraintEnd_toEndOf="@+id/fragment_sign_up_next_account_check_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_next_account_check_edit_text"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="48dp"
        android:id="@+id/fragment_sign_up_next_complete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_box"
        android:gravity="center"
        android:text="등록 완료"
        style="@style/Text.regular.Size20"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_next_account_check_edit_text" />

    <ImageView
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/box_2_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>